@page "/"
@page "/dashboard"

<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudCard class="animated-card">
            <MudCardContent>
                <MudText Typo="Typo.h6">Net Worth</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">$125,000</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Total Assets</MudText>
                <MudText Typo="Typo.h4" Color="Color.Success">$200,000</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Total Expenses</MudText>
                <MudText Typo="Typo.h4" Color="Color.Error">$75,000</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
